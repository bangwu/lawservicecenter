<div class="home">
  <div class="left">
    <%= image_tag('left_logo.png', class: 'logo') %>
  </div>
  <div class="right">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-signin user-form' }) do |f| %>
        <h2 class="form-signin-heading login-title">忘记了密码?</h2>

        <%= devise_error_messages! %>

        <div class="form-group">
          用户名<br />
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit "重设密码" , class: 'btn btn-lg btn-primary btn-block'%>
        </div>
    <% end %>

    <%= render "users/shared/links" %>

  </div>
</div>