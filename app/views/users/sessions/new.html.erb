<div class="home">
  <div class="left">
    <%= image_tag('left_logo.png', class: 'logo') %>
  </div>
  <div class="right">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin user-form'}) do |f| %>
        <h2 class="form-signin-heading login-title">登录</h2>
        <div class="form-group">
          用户名<br />
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          密码<br />
          <%= f.password_field :password, autocomplete: "off" , class: 'form-control'%>
        </div>
        <% if devise_mapping.rememberable? -%>
            <div class="checkbox">
              <label>
                <%= f.check_box :remember_me %> 记住密码
              </label>
            </div>
        <% end -%>
        <div class="form-group">
          <%= f.submit "登录", class: 'btn btn-lg btn-primary btn-block' %>
        </div>
    <% end %>

    <%= render "users/shared/links" %>

  </div>
</div>