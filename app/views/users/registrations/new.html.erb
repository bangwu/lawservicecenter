<div class="home">
  <div class="left">
    <%= image_tag('left_logo.png', class: 'logo') %>
  </div>
  <div class="right">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-signin user-form'}) do |f| %>
        <h2 class="form-signin-heading login-title">注册</h2>
        <%= devise_error_messages! %>

        <div class="form-group">
          用户名<br />
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          密码
          <% if @minimum_password_length %>
              <em>(最少<%= @minimum_password_length %>个字符)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="form-group">
         确认密码<br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit "注册" , class: 'btn btn-lg btn-primary btn-block' %>
        </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
