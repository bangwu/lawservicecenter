<div class="container home">
  <div class="left">
    <%= image_tag('left_logo.png', class: 'logo')%>
  </div>
  <div class="right consult">
    <%= form_for @consult ,html: { multipart: true, class: 'form-signin consult-form' }, url: consult_create_url do |f| %>
        <h2 class="form-signin-heading consult-title"><%= @consult.question_type %></h2>
        <div class="type">
          <%= f.text_field :question_type %>
        </div>
        <div class="control-group">
          <div class="control-label">时间:</div>
          <%= f.text_field :time, class: 'control-item', 'data-provide': 'datepicker' %>
        </div>
        <div class="control-group">
          <div class="control-label">名称:</div>
          <%= f.text_field :title, class: 'control-item' %>
        </div>

        <div class="control-group">
          <div class="control-label">地址:</div>
          <%= f.text_field :address, class: 'control-item' %>
        </div>

        <div class="control-group">
          <div class="control-label">联系人:</div>
          <%= f.text_field :contact, class: 'control-item' %>
        </div>

        <div class="control-group">
          <div class="control-label">联系电话:</div>
          <%= f.text_field :phone, class: 'control-item' %>
        </div>

        <div class="form-group control-group">
          <div class="control-label-area">咨询问题:</div>
          <%= f.text_area :question, class: 'control-area' %>
        </div>

        <div class="form-group control-group">
          <div class="control-label-area">附件</div>
          <%= f.file_field :attachment, class: 'btn btn-default' %>
        </div>

        <div class="form-group">
          <%= f.submit '提交' ,class: 'btn btn-lg btn-default btn-block'%>
        </div>
    <% end %>
  </div>
</div>
