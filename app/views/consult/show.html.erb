<div class="container home">
  <div class="left">
    <%= image_tag('left_logo.png', class: 'logo') %>
  </div>
  <div class="right consult">
    <div class="type">
      <%= @consult.question_type %>
    </div>
    <div class="control-group">
      <div class="control-label">时间:<%= @consult.time %></div>
    </div>
    <div class="control-group">
      <div class="control-label">名称:<%= @consult.title %></div>

    </div>

    <div class="control-group">
      <div class="control-label">地址:<%= @consult.address %></div>

    </div>

    <div class="control-group">
      <div class="control-label">联系人:<%= @consult.contact %></div>

    </div>

    <div class="control-group">
      <div class="control-label">联系电话:<%= @consult.phone %></div>

    </div>

    <div class="control-group">
      <div class="control-label-area">咨询问题:<%= @consult.question %></div>

    </div>

    <div class="control-group">
      <div class="control-label-area">附件<%= link_to '下载', @consult.attachment.url %></div>
    </div>

  </div>
</div>
